---
import "../styles/recruiter.css";
import MetaHead from "../components/MetaHead.astro";
---
<head>
<MetaHead title="Registro de Reclutador" description="Únete a nuestra comunidad de reclutadores y comienza a gestionar tus candidatos de manera eficiente." />
</head>

<div class="registration-container">
    <div class="form-section">
        <h1>Únete a nuestra comunidad de reclutadores</h1>
        <p class="subtitle">Completa tu registro</p>
        
        <form>
            <div class="form-grid">
                <div class="form-group">
                    <label for="nombre">Nombre Completo</label>
                    <input type="text" id="nombre" name="nombre" required>
                </div>
                
                <div class="form-group">
                    <label for="fecha">Fecha de Nacimiento</label>
                    <input type="date" id="fecha" name="fecha" required>
                </div>
                
                <div class="form-group">
                    <label for="pais">País</label>
                    <select id="pais" name="pais" required>
                        <option value="">Seleccionar país</option>
                        <option value="MX">México</option>
                        <option value="US">Estados Unidos</option>
                        <option value="CA">Canadá</option>
                    </select>
                </div>
                
                <div class="form-group">
                    <label for="estado">Estado</label>
                    <input type="text" id="estado" name="estado" required>
                </div>
                
                <div class="form-group">
                    <label for="telefono">Teléfono</label>
                    <div class="phone-group">
                        <input type="text" class="country-code" value="+52" readonly>
                        <input type="tel" id="telefono" name="telefono" required>
                    </div>
                </div>
                
                <div class="form-group">
                    <label for="email">Correo Electrónico</label>
                    <input type="email" id="email" name="email" required>
                </div>
                
                <div class="form-group">
                    <label for="password">Contraseña</label>
                    <input type="password" id="password" name="password" required>
                </div>
                
                <div class="form-group">
                    <label for="confirm-password">Confirmar Contraseña</label>
                    <input type="password" id="confirm-password" name="confirm-password" required>
                </div>
            </div>
            
            <div class="terms">
                Al continuar mi registro acepto los <a href="#">términos y condiciones</a>
            </div>
            
            <button type="submit" class="register-btn">Registrarse</button>
            
            <div class="login-link">
                ¿Ya tienes cuenta? <a href="#">Inicia sesión aquí</a>
            </div>
        </form>
    </div>
    
    <div class="image-section">
        <div class="image-placeholder">
            <img src="/images/recruiter.png" alt="Imagen de Reclutador" class="recruiter-image">
        </div>
    </div>
</div>

<script src="/src/scripts/candidate.js"></script>
