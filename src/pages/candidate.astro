---
export const prerender = false;
import "../styles/candidate.css";
import MetaHead from "../components/MetaHead.astro";
const url = new URL(Astro.request.url);
const email = url.searchParams.get('email');
---
<head>
<MetaHead title="Registro de Candidato" description="Completa tu registro para postularte a empleos" />
</head>

<div class="registration-container">
    <div class="form-section">
        <h1>Postúlate a nuestros empleos</h1>
        <p class="subtitle">Termina tu registro</p>
        
        <form>
            <div class="form-grid">
                <div class="form-group">
                    <label for="nombre">Nombre Completo</label>
                    <input type="text" id="nombre" name="nombre" required>
                </div>
                
                <div class="form-group">
                    <label for="fecha">Fecha de Nacimiento</label>
                    <input type="date" id="fecha" name="fecha" required>
                </div>
                
                <div class="form-group">
                    <label for="pais">País</label>
                    <select id="pais" name="pais" required>
                        <option value="">Seleccionar país</option>
                        <option value="MX">México</option>
                        <option value="US">Estados Unidos</option>
                        <option value="CA">Canadá</option>
                    </select>
                </div>
                
                <div class="form-group">
                    <label for="estado">Estado</label>
                    <input type="text" id="estado" name="estado" required>
                </div>
                
                <div class="form-group">
                    <label for="telefono">Teléfono</label>
                    <div class="phone-group">
                        <input type="text" class="country-code" value="+52" readonly>
                        <input type="tel" id="telefono" name="telefono" required>
                    </div>
                </div>
                
                <div class="form-group">
                    <label for="email">Correo Electrónico</label>
                    <input type="email" id="email" name="email" required value={email}>
                </div>
                
                <div class="form-group">
                    <label for="password">Contraseña</label>
                    <input type="password" id="password" name="password" required>
                </div>
                
                <div class="form-group">
                    <label for="confirm-password">Confirmar Contraseña</label>
                    <input type="password" id="confirm-password" name="confirm-password" required>
                </div>
            </div>
            
            <div class="disabilities-section">
                <div class="disabilities-title">Discapacidades</div>
                <div class="disabilities-grid">
                    <div class="checkbox-group">
                        <input type="checkbox" id="motriz" name="discapacidades" value="motriz">
                        <label class="checkbox-label" for="motriz">Motriz</label>
                    </div>
                    <div class="checkbox-group">
                        <input type="checkbox" id="visual" name="discapacidades" value="visual">
                        <label class="checkbox-label" for="visual">Visual</label>
                    </div>
                    <div class="checkbox-group">
                        <input type="checkbox" id="auditiva" name="discapacidades" value="auditiva">
                        <label class="checkbox-label" for="auditiva">Auditiva</label>
                    </div>
                    <div class="checkbox-group">
                        <input type="checkbox" id="habla" name="discapacidades" value="habla">
                        <label class="checkbox-label" for="habla">Habla</label>
                    </div>
                    <div class="checkbox-group">
                        <input type="checkbox" id="intelectual" name="discapacidades" value="intelectual">
                        <label class="checkbox-label" for="intelectual">Intelectual</label>
                    </div>
                    <div class="checkbox-group">
                        <input type="checkbox" id="psiquica" name="discapacidades" value="psiquica">
                        <label class="checkbox-label" for="psiquica">Psíquica</label>
                    </div>
                    <div class="checkbox-group">
                        <input type="checkbox" id="visceral" name="discapacidades" value="visceral">
                        <label class="checkbox-label" for="visceral">Visceral</label>
                    </div>
                    <div class="checkbox-group">
                        <input type="checkbox" id="ninguna" name="discapacidades" value="ninguna">
                        <label class="checkbox-label" for="ninguna">Ninguna</label>
                    </div>
                </div>
            </div>
            
            <div class="terms">
                Al continuar mi registro acepto los <a href="#">términos y condiciones</a>
            </div>
            
            <button type="submit" class="register-btn">Registrarse</button>
            
            <div class="login-link">
                ¿Ya tienes cuenta? <a href="#">Inicia sesión aquí</a>
            </div>
        </form>
    </div>
    
    <div class="image-section">
        <div class="image-placeholder">
            <img src="/images/candidate.png" alt="Imagen de Candidato" class="candidate-image">
        </div>
    </div>
</div>

<script src="/src/scripts/candidate.js"></script>
